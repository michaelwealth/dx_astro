---
import logoWhite from '../assets/logos/Digtal Xceeded Logo white.png';

const currentYear = new Date().getFullYear();

const footerLinks = {
  services: [
    { label: 'Branding & Design', href: '/services/branding-design' },
    { label: 'Web Development', href: '/services/web-development' },
    { label: 'Digital Strategy', href: '/services/digital-strategy' },
    { label: 'Paid Media', href: '/services/paid-social' },
    { label: 'UI/UX Design', href: '/services/ui-ux-design' },
  ],
  company: [
    { label: 'About Us', href: '/about' },
    { label: 'Portfolio', href: '/portfolio' },
    { label: 'Insights', href: '/insights' },
    { label: 'Contact', href: '/contact' },
  ],
  resources: [
    { label: 'Blog', href: '/insights' },
    { label: 'All Services', href: '/services' },
  ],
};

const socialLinks = [
  { 
    label: 'LinkedIn', 
    href: 'https://linkedin.com/company/digitalxceeded',
    icon: 'linkedin'
  },
  { 
    label: 'Twitter', 
    href: 'https://twitter.com/digitalxceeded',
    icon: 'twitter'
  },
  { 
    label: 'Instagram', 
    href: 'https://instagram.com/digitalxceeded',
    icon: 'instagram'
  },
];
---

<footer class="footer">
  <!-- CTA Section -->
  <section class="footer-cta">
    <div class="container">
      <div class="cta-content">
        <div class="cta-text">
          <span class="cta-eyebrow">Ready to Elevate?</span>
          <h2 class="cta-title">Let's build something <span class="text-gradient">extraordinary</span> together</h2>
          <p class="cta-subtitle">From strategy to execution, we're your integrated partner for digital growth.</p>
        </div>
        <div class="cta-actions">
          <a href="/contact" class="btn btn-primary btn-lg">
            Start a Conversation
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M4 10H16M16 10L10 4M16 10L10 16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
          <a href="/portfolio" class="btn btn-secondary btn-lg">
            View Our Work
          </a>
        </div>
      </div>
      
      <!-- Decorative Elements -->
      <div class="cta-decoration" aria-hidden="true">
        <div class="cta-circle cta-circle-1"></div>
        <div class="cta-circle cta-circle-2"></div>
        <div class="cta-lines">
          <span></span><span></span><span></span>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Main Footer -->
  <div class="footer-main">
    <div class="container">
      <div class="footer-grid">
        <!-- Brand Column -->
        <div class="footer-brand">
          <a href="/" class="footer-logo">
            <img src={logoWhite.src} alt="Digital Xceeded" width="160" height="36" />
          </a>
          <p class="footer-tagline">
            Integrated digital expertise that drives measurable growth. Strategy, brand, platform, and growth—working together.
          </p>
          <div class="footer-social">
            {socialLinks.map(social => (
              <a 
                href={social.href} 
                class="social-link" 
                aria-label={social.label}
                target="_blank"
                rel="noopener noreferrer"
              >
                {social.icon === 'linkedin' && (
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                  </svg>
                )}
                {social.icon === 'twitter' && (
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                  </svg>
                )}
                {social.icon === 'instagram' && (
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                )}
              </a>
            ))}
          </div>
        </div>
        
        <!-- Links Columns -->
        <div class="footer-links">
          <div class="footer-column">
            <h4 class="footer-heading">Services</h4>
            <ul class="footer-list">
              {footerLinks.services.map(link => (
                <li><a href={link.href}>{link.label}</a></li>
              ))}
            </ul>
          </div>
          
          <div class="footer-column">
            <h4 class="footer-heading">Company</h4>
            <ul class="footer-list">
              {footerLinks.company.map(link => (
                <li><a href={link.href}>{link.label}</a></li>
              ))}
            </ul>
          </div>
          
          <div class="footer-column">
            <h4 class="footer-heading">Resources</h4>
            <ul class="footer-list">
              {footerLinks.resources.map(link => (
                <li><a href={link.href}>{link.label}</a></li>
              ))}
            </ul>
          </div>
        </div>
        
        <!-- Newsletter -->
        <div class="footer-newsletter">
          <h4 class="footer-heading">Stay Updated</h4>
          <p>Get insights on digital strategy and growth delivered to your inbox.</p>
          <form class="newsletter-form" action="#" method="POST">
            <div class="input-group">
              <input 
                type="email" 
                placeholder="Your email" 
                required 
                aria-label="Email address"
              />
              <button type="submit" class="btn-submit" aria-label="Subscribe">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                  <path d="M4 10H16M16 10L10 4M16 10L10 16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Footer Bottom -->
  <div class="footer-bottom">
    <div class="container">
      <div class="footer-bottom-content">
        <p class="copyright">
          © {currentYear} Digital Xceeded. All rights reserved.
        </p>
        <div class="footer-legal">
          <a href="/privacy">Privacy Policy</a>
          <a href="/terms">Terms of Service</a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-text);
    color: var(--color-white);
    position: relative;
    overflow: hidden;
  }
  
  /* CTA Section */
  .footer-cta {
    position: relative;
    padding: var(--space-5xl) 0;
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    overflow: hidden;
  }
  
  .cta-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--space-2xl);
  }
  
  .cta-eyebrow {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-primary);
    margin-bottom: var(--space-sm);
  }
  
  .cta-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 800;
    color: #FFFFFF;
    max-width: 800px;
  }
  
  .cta-subtitle {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.7);
    max-width: 600px;
  }
  
  .cta-actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-md);
    justify-content: center;
  }
  
  .cta-actions .btn-secondary {
    background: transparent;
    border: 2px solid rgba(255, 255, 255, 0.3);
    color: #FFFFFF;
  }
  
  .cta-actions .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.5);
    color: #FFFFFF;
  }
  
  /* CTA Decorations */
  .cta-decoration {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }
  
  .cta-circle {
    position: absolute;
    border-radius: 50%;
    border: 1px solid rgba(255, 87, 87, 0.2);
  }
  
  .cta-circle-1 {
    width: 600px;
    height: 600px;
    top: -300px;
    right: -200px;
  }
  
  .cta-circle-2 {
    width: 400px;
    height: 400px;
    bottom: -200px;
    left: -100px;
    border-color: rgba(255, 152, 0, 0.2);
  }
  
  .cta-lines {
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: space-around;
  }
  
  .cta-lines span {
    display: block;
    width: 1px;
    height: 200px;
    background: linear-gradient(180deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    transform: translateY(-50%);
  }
  
  /* Main Footer */
  .footer-main {
    padding: var(--space-4xl) 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .footer-grid {
    display: grid;
    grid-template-columns: 1.5fr 2fr 1fr;
    gap: var(--space-4xl);
  }
  
  .footer-logo img {
    height: 32px;
    width: auto;
    opacity: 0.9;
  }
  
  .footer-tagline {
    margin-top: var(--space-lg);
    font-size: 0.9375rem;
    color: rgba(255, 255, 255, 0.6);
    line-height: 1.7;
    max-width: 280px;
  }
  
  .footer-social {
    display: flex;
    gap: var(--space-md);
    margin-top: var(--space-xl);
  }
  
  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: var(--radius-full);
    background: rgba(255, 255, 255, 0.1);
    color: #FFFFFF;
    transition: all var(--transition-fast);
    text-decoration: none;
  }
  
  .social-link:hover {
    background: var(--color-primary);
    transform: translateY(-2px);
  }
  
  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-2xl);
  }
  
  .footer-heading {
    font-family: var(--font-display);
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #FFFFFF;
    margin-bottom: var(--space-lg);
  }
  
  .footer-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }
  
  .footer-list a {
    font-size: 0.9375rem;
    color: rgba(255, 255, 255, 0.6);
    transition: all var(--transition-fast);
    text-decoration: none;
    display: inline-block;
  }
  
  .footer-list a:hover {
    color: #FFFFFF;
    transform: translateX(4px);
  }
  
  .footer-newsletter p {
    font-size: 0.9375rem;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: var(--space-md);
  }
  
  .newsletter-form .input-group {
    display: flex;
    gap: var(--space-sm);
  }
  
  .newsletter-form input {
    flex: 1;
    padding: var(--space-md) var(--space-lg);
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: var(--radius-full);
    color: var(--color-white);
    font-size: 0.9375rem;
    outline: none;
    transition: all var(--transition-fast);
  }
  
  .newsletter-form input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }
  
  .newsletter-form input:focus {
    border-color: var(--color-primary);
    background: rgba(255, 255, 255, 0.15);
  }
  
  .btn-submit {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--gradient-warm);
    border: none;
    border-radius: var(--radius-full);
    color: var(--color-white);
    cursor: pointer;
    transition: all var(--transition-fast);
  }
  
  .btn-submit:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 20px rgba(255, 87, 87, 0.4);
  }
  
  /* Footer Bottom */
  .footer-bottom {
    padding: var(--space-lg) 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--space-md);
  }
  
  .copyright {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
  }
  
  .footer-legal {
    display: flex;
    gap: var(--space-xl);
  }
  
  .footer-legal a {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
    transition: color var(--transition-fast);
    text-decoration: none;
  }
  
  .footer-legal a:hover {
    color: #FFFFFF;
  }
  
  /* Responsive */
  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-3xl);
    }
    
    .footer-newsletter {
      grid-column: span 2;
    }
  }
  
  @media (max-width: 768px) {
    .footer-cta {
      padding: var(--space-4xl) 0;
    }
    
    .cta-actions {
      flex-direction: column;
      width: 100%;
    }
    
    .cta-actions .btn {
      width: 100%;
    }
    
    .footer-grid {
      grid-template-columns: 1fr;
      gap: var(--space-2xl);
    }
    
    .footer-links {
      grid-template-columns: 1fr 1fr;
    }
    
    .footer-newsletter {
      grid-column: auto;
    }
    
    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
