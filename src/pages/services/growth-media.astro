---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Growth & Media - Digital Xceeded" hideFooterCta={true}>
  <!-- Hero Section -->
  <section class="category-hero">
    <div class="hero-bg">
      <div class="gradient-orb orb-1"></div>
      <div class="gradient-orb orb-2"></div>
      <div class="pattern-overlay"></div>
    </div>
    <div class="container">
      <nav class="breadcrumb">
        <a href="/">Home</a>
        <span class="separator">/</span>
        <a href="/services">Services</a>
        <span class="separator">/</span>
        <span class="current">Growth & Media</span>
      </nav>
      <div class="hero-content">
        <span class="category-badge">Service Category</span>
        <h1>Growth & <span class="gradient-text">Media</span></h1>
        <p class="hero-description">
          We turn data into decisions and creativity into conversions. Our performance-driven 
          approach delivers measurable results across every channel—from search and social 
          to display and beyond.
        </p>
        <div class="hero-stats">
          <div class="stat">
            <span class="stat-number">3.7x</span>
            <span class="stat-label">Average ROI</span>
          </div>
          <div class="stat">
            <span class="stat-number">$50M+</span>
            <span class="stat-label">Media Managed</span>
          </div>
          <div class="stat">
            <span class="stat-number">200+</span>
            <span class="stat-label">Campaigns Launched</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Showcase Section -->
  <section class="services-showcase">
    <div class="container">
      <div class="section-header">
        <span class="section-tag">Our Services</span>
        <h2>Performance Marketing That Delivers</h2>
        <p>Data-driven strategies to maximize your marketing investment</p>
      </div>

      <div class="services-list">
        <!-- Service 1: SEM -->
        <div class="service-row">
          <div class="service-number">01</div>
          <div class="service-content">
            <div class="service-icon">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
              </svg>
            </div>
            <div class="service-info">
              <h3>Search Engine Marketing</h3>
              <p>Capture high-intent traffic with strategic paid search campaigns. We optimize Google Ads and Bing Ads to maximize conversions while minimizing cost per acquisition.</p>
              <ul class="service-features">
                <li>Google Ads Management</li>
                <li>Keyword Strategy</li>
                <li>Landing Page Optimization</li>
                <li>Conversion Tracking</li>
              </ul>
            </div>
            <a href="/services/sem" class="service-link">
              <span>Explore Service</span>
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- Service 2: Paid Social -->
        <div class="service-row">
          <div class="service-number">02</div>
          <div class="service-content">
            <div class="service-icon">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
              </svg>
            </div>
            <div class="service-info">
              <h3>Paid Social Media</h3>
              <p>Reach your ideal audience where they spend their time. We create and manage campaigns across Meta, LinkedIn, TikTok, and emerging platforms with precision targeting.</p>
              <ul class="service-features">
                <li>Meta Ads (Facebook & Instagram)</li>
                <li>LinkedIn Advertising</li>
                <li>TikTok & Emerging Platforms</li>
                <li>Audience Development</li>
              </ul>
            </div>
            <a href="/services/paid-social" class="service-link">
              <span>Explore Service</span>
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- Service 3: Display & Retargeting -->
        <div class="service-row">
          <div class="service-number">03</div>
          <div class="service-content">
            <div class="service-icon">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
                <line x1="8" y1="21" x2="16" y2="21"></line>
                <line x1="12" y1="17" x2="12" y2="21"></line>
              </svg>
            </div>
            <div class="service-info">
              <h3>Display & Retargeting</h3>
              <p>Stay top-of-mind with strategic display advertising and intelligent retargeting campaigns that bring visitors back to convert.</p>
              <ul class="service-features">
                <li>Programmatic Display</li>
                <li>Dynamic Retargeting</li>
                <li>Native Advertising</li>
                <li>Cross-Device Targeting</li>
              </ul>
            </div>
            <a href="/services/display-retargeting" class="service-link">
              <span>Explore Service</span>
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- Service 4: Media Relations -->
        <div class="service-row">
          <div class="service-number">04</div>
          <div class="service-content">
            <div class="service-icon">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
              </svg>
            </div>
            <div class="service-info">
              <h3>Media Relations</h3>
              <p>Build credibility and visibility through strategic media placements. We connect your brand with the right publications, influencers, and earned media opportunities.</p>
              <ul class="service-features">
                <li>Press Release Distribution</li>
                <li>Media Outreach</li>
                <li>Influencer Partnerships</li>
                <li>Reputation Management</li>
              </ul>
            </div>
            <a href="/services/media-relations" class="service-link">
              <span>Explore Service</span>
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Section -->
  <section class="why-choose">
    <div class="container">
      <div class="why-grid">
        <div class="why-content">
          <span class="section-tag">Why Choose Us</span>
          <h2>Performance Marketing Expertise</h2>
          <p>We combine creative excellence with data science to deliver campaigns that consistently outperform benchmarks.</p>
          <ul class="benefits-list">
            <li>
              <span class="benefit-icon">✓</span>
              <span>Certified experts across all major advertising platforms</span>
            </li>
            <li>
              <span class="benefit-icon">✓</span>
              <span>Real-time optimization with advanced analytics</span>
            </li>
            <li>
              <span class="benefit-icon">✓</span>
              <span>Transparent reporting with actionable insights</span>
            </li>
            <li>
              <span class="benefit-icon">✓</span>
              <span>Integrated approach across paid, owned, and earned media</span>
            </li>
          </ul>
        </div>
        <div class="testimonial-card">
          <div class="quote-icon">"</div>
          <blockquote>
            Our cost per lead dropped by 45% in the first quarter of working with Digital Xceeded. Their data-driven approach and constant optimization made all the difference to our growth trajectory.
          </blockquote>
          <div class="testimonial-author">
            <div class="author-avatar">RL</div>
            <div class="author-info">
              <span class="author-name">Rachel Liu</span>
              <span class="author-title">CMO, Scale Finance</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="process-section">
    <div class="container">
      <div class="section-header center">
        <span class="section-tag">Our Process</span>
        <h2>How We Drive Growth</h2>
        <p>A systematic approach to maximizing your marketing ROI</p>
      </div>

      <div class="process-timeline">
        <div class="process-step">
          <div class="step-marker">
            <span class="step-number">1</span>
            <div class="step-line"></div>
          </div>
          <div class="step-content">
            <h3>Audit & Analysis</h3>
            <p>We analyze your current performance, competitive landscape, and market opportunities to identify growth levers.</p>
          </div>
        </div>

        <div class="process-step">
          <div class="step-marker">
            <span class="step-number">2</span>
            <div class="step-line"></div>
          </div>
          <div class="step-content">
            <h3>Strategy & Planning</h3>
            <p>We develop a comprehensive media strategy with clear KPIs, budgets, and channel mix optimization.</p>
          </div>
        </div>

        <div class="process-step">
          <div class="step-marker">
            <span class="step-number">3</span>
            <div class="step-line"></div>
          </div>
          <div class="step-content">
            <h3>Execute & Optimize</h3>
            <p>We launch campaigns and continuously optimize based on real-time data and performance insights.</p>
          </div>
        </div>

        <div class="process-step">
          <div class="step-marker">
            <span class="step-number">4</span>
          </div>
          <div class="step-content">
            <h3>Report & Scale</h3>
            <p>We deliver transparent reporting and scale winning strategies to maximize your growth potential.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="cta-bg">
      <div class="cta-circle circle-1"></div>
      <div class="cta-circle circle-2"></div>
    </div>
    <div class="container">
      <div class="cta-content">
        <h2>Ready to Accelerate Your Growth?</h2>
        <p>Let's build a performance marketing strategy that delivers measurable results. Get in touch today.</p>
        <div class="cta-buttons">
          <a href="/contact" class="btn btn-primary btn-lg">
            Start a Project
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M4 10H16M16 10L10 4M16 10L10 16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
          <a href="/portfolio" class="btn btn-secondary btn-lg">View Our Work</a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .category-hero {
    position: relative;
    padding: 8rem 0 5rem;
    overflow: hidden;
    background: var(--color-bg-secondary);
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.5;
  }

  .orb-1 {
    width: 500px;
    height: 500px;
    background: var(--color-primary);
    top: -200px;
    right: -100px;
  }

  .orb-2 {
    width: 400px;
    height: 400px;
    background: var(--color-secondary);
    bottom: -150px;
    left: -100px;
  }

  .pattern-overlay {
    position: absolute;
    inset: 0;
    background-image: radial-gradient(circle at 1px 1px, rgba(0,0,0,0.05) 1px, transparent 0);
    background-size: 40px 40px;
  }

  html[data-theme="dark"] .pattern-overlay {
    background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.03) 1px, transparent 0);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    position: relative;
    z-index: 1;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    margin-bottom: 2rem;
    color: var(--color-text-secondary);
  }

  .breadcrumb a {
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color 0.2s;
  }

  .breadcrumb a:hover {
    color: var(--color-primary);
  }

  .breadcrumb .current {
    color: var(--color-text);
  }

  .hero-content {
    max-width: 800px;
  }

  .category-badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border-radius: 2rem;
    margin-bottom: 1.5rem;
  }

  .hero-content h1 {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    color: var(--color-text);
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-description {
    font-size: 1.25rem;
    line-height: 1.7;
    color: var(--color-text-secondary);
    margin-bottom: 3rem;
  }

  .hero-stats {
    display: flex;
    gap: 3rem;
    flex-wrap: wrap;
  }

  .stat {
    display: flex;
    flex-direction: column;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }

  /* Services Showcase */
  .services-showcase {
    padding: 6rem 0;
    background: var(--color-bg);
  }

  .section-header {
    margin-bottom: 4rem;
  }

  .section-header.center {
    text-align: center;
  }

  .section-tag {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  .section-header h2 {
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 1rem;
  }

  .section-header p {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    max-width: 600px;
  }

  .section-header.center p {
    margin: 0 auto;
  }

  .services-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .service-row {
    display: flex;
    align-items: stretch;
    background: var(--color-bg-secondary);
    border-radius: 1rem;
    overflow: hidden;
    border: 1px solid var(--color-border);
    transition: all 0.3s ease;
  }

  .service-row:hover {
    border-color: var(--color-primary);
    box-shadow: 0 10px 40px rgba(255, 87, 87, 0.1);
    transform: translateY(-2px);
  }

  .service-number {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 80px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    color: white;
    font-size: 1.5rem;
    font-weight: 700;
  }

  .service-content {
    flex: 1;
    display: flex;
    align-items: center;
    padding: 2rem;
    gap: 2rem;
  }

  .service-icon {
    flex-shrink: 0;
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(255, 87, 87, 0.1), rgba(255, 152, 0, 0.1));
    border-radius: 0.75rem;
    color: var(--color-primary);
  }

  .service-icon svg {
    width: 28px;
    height: 28px;
  }

  .service-info {
    flex: 1;
  }

  .service-info h3 {
    font-size: 1.375rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 0.75rem;
  }

  .service-info p {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .service-features {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem 1.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .service-features li {
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    position: relative;
    padding-left: 1rem;
  }

  .service-features li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 5px;
    height: 5px;
    background: var(--color-primary);
    border-radius: 50%;
  }

  .service-link {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: transparent;
    border: 2px solid var(--color-border);
    border-radius: 0.5rem;
    color: var(--color-text);
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .service-link:hover {
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    border-color: transparent;
    color: white;
  }

  .service-link svg {
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
  }

  .service-link:hover svg {
    transform: translateX(4px);
  }

  /* Why Choose Section */
  .why-choose {
    padding: 6rem 0;
    background: var(--color-bg-secondary);
  }

  .why-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .why-content h2 {
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 1rem;
  }

  .why-content > p {
    font-size: 1.0625rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: 2rem;
  }

  .benefits-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .benefits-list li {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    font-size: 0.9375rem;
    color: var(--color-text);
  }

  .benefit-icon {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 22px;
    height: 22px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    color: white;
    font-size: 0.75rem;
    font-weight: 700;
    border-radius: 50%;
  }

  .testimonial-card {
    background: var(--color-bg);
    border-radius: 1.5rem;
    padding: 2.5rem;
    border: 1px solid var(--color-border);
    position: relative;
  }

  .quote-icon {
    position: absolute;
    top: 1.5rem;
    left: 2rem;
    font-size: 5rem;
    font-family: Georgia, serif;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
    opacity: 0.3;
  }

  .testimonial-card blockquote {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-text);
    font-style: italic;
    margin: 0 0 2rem 0;
    position: relative;
    z-index: 1;
  }

  .testimonial-author {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .author-avatar {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
    font-size: 1.125rem;
  }

  .author-info {
    display: flex;
    flex-direction: column;
  }

  .author-name {
    font-weight: 600;
    color: var(--color-text);
  }

  .author-title {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }

  /* Process Section */
  .process-section {
    padding: 6rem 0;
    background: var(--color-bg);
  }

  .process-timeline {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    margin-top: 4rem;
  }

  .process-step {
    display: flex;
    flex-direction: column;
  }

  .step-marker {
    display: flex;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .step-number {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .step-line {
    flex: 1;
    height: 2px;
    background: linear-gradient(90deg, var(--color-primary), var(--color-secondary));
    opacity: 0.3;
    margin-left: 1rem;
  }

  .step-content h3 {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 0.75rem;
  }

  .step-content p {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  /* CTA Section */
  .cta-section {
    position: relative;
    padding: 6rem 0;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    overflow: hidden;
  }

  .cta-bg {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .cta-circle {
    position: absolute;
    border-radius: 50%;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .circle-1 {
    width: 400px;
    height: 400px;
    top: -200px;
    left: -100px;
  }

  .circle-2 {
    width: 300px;
    height: 300px;
    bottom: -150px;
    right: -50px;
  }

  .cta-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 600px;
