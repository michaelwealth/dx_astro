<style>
  /* Strategy & Advisory Category Styles */
  :global(.strategy-advisory) {
    --strategy-primary: #1a365d;
    --strategy-secondary: #2d3748;
    --strategy-accent: #3182ce;
    --strategy-light: #f7fafc;
    --strategy-gradient: linear-gradient(135deg, #1a365d 0%, #3182ce 100%);
  }

  .category-hero {
    background: var(--strategy-gradient);
    color: white;
    padding: 6rem 0 4rem;
    position: relative;
    overflow: hidden;
  }

  .category-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.03)" stroke-width="0.5"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
    opacity: 0.3;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    margin-bottom: 2rem;
    color: rgba(255, 255, 255, 0.8);
  }

  .breadcrumb a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .breadcrumb a:hover {
    color: white;
  }

  .breadcrumb span {
    color: rgba(255, 255, 255, 0.6);
  }

  .category-badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 1.5rem;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .hero-text h1 {
    font-size: 3.5rem;
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, white 0%, rgba(255, 255, 255, 0.8) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-description {
    font-size: 1.25rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2rem;
  }

  .hero-stats {
    display: flex;
    gap: 2rem;
  }

  .stat {
    text-align: center;
  }

  .stat-value {
    display: block;
    font-size: 2rem;
    font-weight: 700;
    color: white;
  }

  .stat-label {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.8);
    margin-top: 0.25rem;
  }

  .strategy-showcase {
    position: relative;
    height: 400px;
  }

  .floating-element {
    position: absolute;
    animation: float 6s ease-in-out infinite;
  }

  .elem-1 {
    top: 0;
    left: 0;
    animation-delay: 0s;
  }

  .elem-2 {
    top: 30%;
    right: 10%;
    animation-delay: -2s;
  }

  .elem-3 {
    bottom: 0;
    left: 20%;
    animation-delay: -4s;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
  }

  .strategy-roadmap {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 1rem;
    padding: 1.5rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    width: 280px;
  }

  .roadmap-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .roadmap-title {
    font-weight: 600;
    color: var(--strategy-primary);
  }

  .roadmap-phase {
    background: var(--strategy-accent);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .roadmap-steps {
    display: flex;
    gap: 1rem;
  }

  .step {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .step-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    position: relative;
  }

  .step.completed .step-dot {
    background: #48bb78;
  }

  .step.active .step-dot {
    background: var(--strategy-accent);
    box-shadow: 0 0 0 3px rgba(49, 130, 206, 0.3);
  }

  .step.upcoming .step-dot {
    background: #e2e8f0;
  }

  .step-label {
    font-size: 0.75rem;
    color: var(--strategy-primary);
    font-weight: 500;
  }

  .consultation-card {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 1rem;
    padding: 1.5rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    width: 240px;
  }

  .consultation-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .consultant-avatar {
    width: 40px;
    height: 40px;
    background: var(--strategy-accent);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
  }

  .consultant-name {
    font-weight: 600;
    color: var(--strategy-primary);
  }

  .consultation-time {
    font-size: 0.875rem;
    color: #718096;
  }

  .consultation-agenda .agenda-item {
    background: #f7fafc;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-size: 0.875rem;
    color: var(--strategy-primary);
    margin-bottom: 0.5rem;
  }

  .metrics-dashboard {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 1rem;
    padding: 1.5rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    width: 200px;
  }

  .dashboard-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .dashboard-title {
    font-weight: 600;
    color: var(--strategy-primary);
    font-size: 0.875rem;
  }

  .dashboard-period {
    font-size: 0.75rem;
    color: #718096;
  }

  .metrics-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .metric-item {
    text-align: center;
  }

  .metric-value {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--strategy-accent);
  }

  .metric-label {
    font-size: 0.75rem;
    color: #718096;
    margin-top: 0.25rem;
  }

  /* Services Showcase */
  .services-showcase {
    padding: 6rem 0;
    background: #f8fafc;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-label {
    display: inline-block;
    background: var(--strategy-accent);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .section-header h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--strategy-primary);
    margin-bottom: 1rem;
  }

  .section-header p {
    font-size: 1.125rem;
    color: #4a5568;
    max-width: 600px;
    margin: 0 auto;
  }

  .services-mosaic {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 2rem;
  }

  .service-card {
    background: white;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    position: relative;
  }

  .service-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  .service-card.featured {
    grid-row: span 2;
  }

  .card-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--strategy-gradient);
  }

  .gradient-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(26, 54, 93, 0.9) 0%, rgba(49, 130, 206, 0.8) 100%);
  }

  .card-content {
    position: relative;
    z-index: 2;
    padding: 2rem;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .service-card.featured .card-content {
    color: white;
  }

  .service-icon {
    margin-bottom: 1.5rem;
  }

  .service-card h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--strategy-primary);
  }

  .service-card.featured h3 {
    color: white;
  }

  .service-card p {
    color: #4a5568;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }

  .service-card.featured p {
    color: rgba(255, 255, 255, 0.9);
  }

  .service-features {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .feature-tag {
    background: rgba(49, 130, 206, 0.1);
    color: var(--strategy-accent);
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .service-link {
    color: var(--strategy-accent);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.875rem;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
  }

  .service-link:hover {
    color: var(--strategy-primary);
    gap: 0.75rem;
  }

  /* Expertise Section */
  .expertise-section {
    padding: 6rem 0;
    background: white;
  }

  .expertise-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .expertise-card {
    background: #f8fafc;
    padding: 2rem;
    border-radius: 1rem;
    text-align: center;
    transition: all 0.3s ease;
  }

  .expertise-card:hover {
    background: white;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transform: translateY(-5px);
  }

  .expertise-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .expertise-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--strategy-primary);
    margin-bottom: 1rem;
  }

  .expertise-card p {
    color: #4a5568;
    line-height: 1.6;
  }

  /* Process Section */
  .process-section {
    padding: 6rem 0;
    background: #f8fafc;
  }

  .process-timeline {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .process-step {
    background: white;
    padding: 2rem;
    border-radius: 1rem;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
    position: relative;
  }

  .process-step::before {
    content: '';
    position: absolute;
    top: 2rem;
    left: -1px;
    width: 2px;
    height: calc(100% - 4rem);
    background: linear-gradient(to bottom, var(--strategy-accent), transparent);
  }

